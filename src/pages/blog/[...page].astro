    background: rgba(102, 126, 234, 0.1);
    color: #667eea;
    border-radius: 50%;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .pagination-dropdown:hover {
    background: rgba(102, 126, 234, 0.2);
  }

  .dropdown-menu {
    background: white;
    border: 1px solid rgba(102, 126, 234, 0.1);
    border-radius: 15px;
    padding: 0.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    min-width: 3rem;
  }

  .dropdown-item {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(102, 126, 234, 0.1);
    color: #667eea;
    text-decoration: none;
    border-radius: 50%;
    font-weight: 600;
    transition: all 0.3s ease;
