<style>
  .about-content h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--retro-primary);
    font-family: 'Playfair Display', serif;
    margin-bottom: 1rem;
  }
  
  .about-content h2 {
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--retro-accent-green);
    font-family: 'Playfair Display', serif;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .about-content h3 {
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--retro-accent-green);
    font-family: 'Playfair Display', serif;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .about-content h4 {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--retro-accent-gold);
    font-family: 'Playfair Display', serif;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }
  
  .about-content p {
    color: var(--retro-text);
    line-height: 1.6;
    margin-bottom: 1rem;
    font-family: 'Inter', sans-serif;
  }
  
  .about-content ul {
    margin-bottom: 1rem;
  }
  
  .about-content li {
    color: var(--retro-text);
    line-height: 1.5;
    font-family: 'Inter', sans-serif;
  }
  
  .social-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    font-family: 'Inter', sans-serif;
  }
  
  .btn-primary {
    background: var(--retro-accent-green);
    color: white;
    border: 1px solid var(--retro-accent-green);
  }
  
  .btn-primary:hover {
    background: var(--retro-accent-gold);
    border-color: var(--retro-accent-gold);
    transform: translateY(-1px);
  }
  
  .btn-secondary {
    background: transparent;
    color: var(--retro-accent-green);
    border: 1px solid var(--retro-accent-green);
  }
  
  .btn-secondary:hover {
    background: var(--retro-accent-green);
    color: white;
    transform: translateY(-1px);
  }
  
  @media (max-width: 768px) {
    .about-content h1 {
      font-size: 2rem;
    }
    
    .about-content h2 {
      font-size: 1.5rem;
    }
    
    .social-links {
      flex-direction: column;
    }
    
    .btn {
      text-align: center;
    }
  }
</style>
