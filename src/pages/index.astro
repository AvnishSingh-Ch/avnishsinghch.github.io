<style>
  :root {
    --terminal-green: #00ff41;
    --terminal-green-dim: #00cc33;
    --terminal-green-bright: #66ff66;
    --terminal-amber: #ffb000;
    --terminal-red: #ff4444;
    --terminal-blue: #4488ff;
    --terminal-cyan: #44ffff;
    --terminal-bg: #0a0a0a;
    --terminal-bg-light: #1a1a1a;
    --terminal-bg-card: #111111;
    --terminal-border: #333333;
    --terminal-text: #e0e0e0;
    --terminal-text-dim: #999999;
    --terminal-shadow: rgba(0, 255, 65, 0.3);
  }

  /* Terminal Window Styling */
  .terminal-window {
    background: var(--terminal-bg);
    border: 2px solid var(--terminal-border);
    font-family: 'Cascadia', 'Fira Code', 'JetBrains Mono', monospace;
    font-size: 14px;
    line-height: 1.4;
  }

  .terminal-header {
    background: var(--terminal-bg-light);
    padding: 0.5rem 1rem;
    border-bottom: 1px solid var(--terminal-border);
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .terminal-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .terminal-button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .terminal-button.close {
    background: var(--terminal-red);
  }

  .terminal-button.minimize {
    background: var(--terminal-amber);
  }

  .terminal-button.maximize {
    background: var(--terminal-green);
  }

  .terminal-title {
    color: var(--terminal-text-dim);
    font-size: 12px;
  }

  .terminal-content {
    padding: 1rem;
    min-height: 400px;
  }

  .terminal-line {
    margin-bottom: 0.5rem;
  }

  .prompt {
    color: var(--terminal-green);
    font-weight: bold;
  }

  .command {
    color: var(--terminal-cyan);
    margin-left: 0.5rem;
  }

  .terminal-output {
    margin: 1rem 0 2rem 0;
    padding-left: 1rem;
  }

  .ascii-art {
    color: var(--terminal-green-bright);
    font-size: 10px;
    line-height: 1.2;
    margin-bottom: 1rem;
    white-space: pre;
    text-shadow: 0 0 5px var(--terminal-shadow);
  }

  .user-info {
    color: var(--terminal-text);
    margin-bottom: 1rem;
  }

  .info-label {
    color: var(--terminal-amber);
    font-weight: bold;
  }

  .status-active {
    color: var(--terminal-green-bright);
    font-weight: bold;
    text-shadow: 0 0 5px var(--terminal-shadow);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin: 1rem 0;
  }

  .stat-item {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem;
    border: 1px solid var(--terminal-border);
    background: var(--terminal-bg-card);
  }

  .stat-number {
    color: var(--terminal-green-bright);
    font-weight: bold;
  }

  .stat-label {
    color: var(--terminal-text-dim);
  }

  .file-listing {
    font-family: monospace;
    font-size: 13px;
  }

  .file-item {
    margin-bottom: 0.25rem;
    color: var(--terminal-text);
  }

  .dir {
    color: var(--terminal-blue);
    font-weight: bold;
  }

  .exec {
    color: var(--terminal-green);
    font-weight: bold;
  }

  .file {
    color: var(--terminal-text);
  }

  .cursor {
    color: var(--terminal-green);
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  /* System Info Styling */
  .system-info {
    font-family: 'Cascadia', 'Fira Code', 'JetBrains Mono', monospace;
    font-size: 14px;
  }

  .info-header {
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--terminal-border);
  }

  .info-content {
    padding-left: 1rem;
  }

  .info-section {
    margin-bottom: 2rem;
  }

  .section-header {
    color: var(--terminal-amber);
    font-weight: bold;
    margin-bottom: 1rem;
    text-transform: uppercase;
  }

  .info-text {
    color: var(--terminal-text);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .modules-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 0.5rem;
  }

  .module-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.5rem;
    border: 1px solid var(--terminal-border);
    background: var(--terminal-bg-card);
  }

  .module-status {
    color: var(--terminal-green);
    font-weight: bold;
    font-size: 12px;
  }

  .module-name {
    color: var(--terminal-text);
  }

  .specializations {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .spec-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid var(--terminal-border);
    background: var(--terminal-bg-card);
  }

  .spec-icon {
    color: var(--terminal-amber);
    font-size: 16px;
    min-width: 2rem;
  }

  .spec-content {
    flex: 1;
  }

  .spec-title {
    color: var(--terminal-green);
    font-weight: bold;
    margin-bottom: 0.25rem;
  }

  .spec-desc {
    color: var(--terminal-text-dim);
    font-size: 13px;
  }

  /* Git Section Styling */
  .git-section {
    font-family: 'Cascadia', 'Fira Code', 'JetBrains Mono', monospace;
  }

  .git-header {
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--terminal-border);
  }

  .git-content {
    padding-left: 1rem;
  }

  .github-stats {
    display: flex;
    justify-content: center;
    margin: 1rem 0;
  }

  .github-stats img {
    border: 2px solid var(--terminal-border);
    box-shadow: 0 0 10px var(--terminal-shadow);
  }

  /* Connection Section Styling */
  .connection-section {
    font-family: 'Cascadia', 'Fira Code', 'JetBrains Mono', monospace;
  }

  .connection-header {
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--terminal-border);
  }

  .connection-content {
    padding-left: 1rem;
  }

  .connection-text {
    color: var(--terminal-text);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .connection-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 400px;
  }

  .terminal-button-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    border: 2px solid var(--terminal-border);
    background: var(--terminal-bg-card);
    color: var(--terminal-text);
    text-decoration: none;
    font-family: monospace;
    transition: all 0.2s ease;
  }

  .terminal-button-link:hover {
    border-color: var(--terminal-green);
    color: var(--terminal-green);
    box-shadow: 0 0 10px var(--terminal-shadow);
  }

  .button-prompt {
    color: var(--terminal-green);
    font-weight: bold;
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .terminal-window {
      font-size: 12px;
    }

    .ascii-art {
      font-size: 8px;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .modules-grid {
      grid-template-columns: 1fr;
    }

    .connection-buttons {
      max-width: 100%;
    }

    .terminal-button-link {
      font-size: 14px;
    }

    .github-stats img {
      max-width: 100%;
      height: auto;
    }
  }

  @media (max-width: 480px) {
    .terminal-content {
      padding: 0.5rem;
      min-height: 300px;
    }

    .terminal-window {
      font-size: 11px;
    }

    .ascii-art {
      font-size: 7px;
    }
  }
</style> 