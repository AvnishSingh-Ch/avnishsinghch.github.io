<style>
  .credentials-hero {
    text-align: center;
    padding: 2rem 0;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: #6c757d;
    max-width: 600px;
    margin: 0 auto;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .journey-section {
    padding: 2rem 0;
  }

  .journey-timeline {
    max-width: 1000px;
    margin: 0 auto;
  }



  .timeline-items {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .timeline-item {
    display: flex;
    gap: 0.75rem;
    padding: 0.75rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 10px;
    transition: all 0.3s ease;
    position: relative;
    box-shadow: 0 2px 10px rgba(102, 126, 234, 0.2);
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    left: 2.5rem;
    top: 100%;
    width: 2px;
    height: 1.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .timeline-item:last-child::before {
    display: none;
  }

  .timeline-item:hover {
    transform: translateX(3px);
    box-shadow: 0 4px 20px rgba(102, 126, 234, 0.4);
  }

  .timeline-icon {
    font-size: 1.2rem;
    min-width: 2rem;
    text-align: center;
    flex-shrink: 0;
  }

  .timeline-content {
    flex: 1;
  }

  .timeline-title {
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 0.2rem;
    color: white;
  }

  .timeline-institution {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 600;
    margin-bottom: 0.15rem;
  }

  .timeline-period {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 0.4rem;
    font-size: 0.8rem;
  }

  .timeline-description {
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.4;
    margin-bottom: 0.5rem;
    font-size: 0.85rem;
  }





  .skills-section {
    padding: 2rem 0;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .skills-grid.denser {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(56px, 1fr));
    gap: 0.5rem;
    justify-items: center;
    align-items: center;
  }
  .skill-card {
    background: none;
    border: none;
    box-shadow: none;
    padding: 0;
    margin: 0;
    border-radius: 0.75rem;
    transition: transform 0.18s cubic-bezier(.4,2,.6,1), box-shadow 0.18s, background 0.18s;
    text-align: center;
    will-change: transform, box-shadow, background;
  }
  .skill-card:hover, .skill-card:focus {
    transform: scale(1.15);
    box-shadow: 0 0 16px 0 rgba(128, 90, 213, 0.5), 0 2px 8px 0 rgba(0,0,0,0.08);
    background: linear-gradient(135deg, rgba(128,90,213,0.12) 0%, rgba(236,72,153,0.12) 100%);
    cursor: pointer;
  }
  .skill-icon-only {
    width: 36px;
    height: 36px;
    margin: 0;
    padding: 0;
    display: block;
    border-radius: 0.5rem;
    transition: filter 0.18s, box-shadow 0.18s;
  }
  .skill-card:hover .skill-icon-only, .skill-card:focus .skill-icon-only {
    filter: brightness(1.15) drop-shadow(0 0 6px #805ad5cc);
    box-shadow: 0 0 0 4px rgba(128,90,213,0.10);
  }

  /* Remove .skill-title and related styles */
  .skill-title { display: none; }

  .certificates-section {
    padding: 2rem 0;
  }

  .certificates-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .certificate-card {
    padding: 2rem;
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(102, 126, 234, 0.1);
    border-radius: 20px;
    transition: all 0.3s ease;
    position: relative;
  }

  .certificate-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15);
    border-color: rgba(102, 126, 234, 0.3);
  }

  .certificate-card.featured {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
    border: 2px solid rgba(102, 126, 234, 0.2);
  }

  .certificate-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .certificate-title {
    font-size: 1.4rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #333;
  }

  .certificate-issuer {
    color: #667eea;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .certificate-description {
    color: #6c757d;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .certificate-link {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-decoration: none;
    border-radius: 25px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .certificate-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }
    
    .timeline-item {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
      padding: 0.6rem;
    }
    
    .timeline-item::before {
      display: none;
    }
    
    .skills-grid,
    .certificates-grid {
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: 0.75rem;
    }
    
    .skill-card {
      padding: 0.75rem;
    }
    
    .skill-icon {
      width: 40px;
      height: 40px;
    }
    
    .skill-title {
      font-size: 0.9rem;
    }
    
    .skill-level {
      flex-direction: column;
      gap: 0.5rem;
    }
  }

  /* Dark theme adjustments */
  html[data-theme="dracula"] {
    .education-card,
    .skill-card,
    .certificate-card {
      background: rgba(26, 26, 46, 0.95);
      border-color: rgba(102, 126, 234, 0.2);
    }
    
    .certificate-card.featured {
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    }
    
    .education-title,
    .skill-title,
    .certificate-title {
      color: #ffffff;
    }
    
    .certificate-description {
      color: #e9ecef;
    }
  }
</style> 