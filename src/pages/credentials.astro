<style>
  .credentials-hero {
    text-align: center;
    padding: 2rem 0;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--retro-primary);
    font-family: 'Playfair Display', serif;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: var(--retro-text-light);
    max-width: 600px;
    margin: 0 auto;
    font-family: 'Inter', sans-serif;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--retro-primary);
    font-family: 'Playfair Display', serif;
    position: relative;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -1rem;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: linear-gradient(90deg, var(--retro-accent-gold), var(--retro-accent-green));
    border-radius: 2px;
  }

  .journey-section {
    padding: 2rem 0;
  }

  .journey-timeline {
    max-width: 1000px;
    margin: 0 auto;
  }



  .timeline-items {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .timeline-item {
    display: flex;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--retro-bg-alt);
    color: var(--retro-text);
    border: 1px solid var(--retro-border);
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    box-shadow: 0 2px 8px var(--retro-shadow);
    overflow: hidden;
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    left: 3rem;
    top: 100%;
    width: 2px;
    height: 1.5rem;
    background: linear-gradient(180deg, var(--retro-accent-green), var(--retro-accent-gold));
    border-radius: 1px;
  }

  .timeline-item:last-child::before {
    display: none;
  }

  .timeline-item:hover {
    transform: translateY(-4px) translateX(3px);
    border-color: var(--retro-accent-gold);
    box-shadow: 
      0 8px 25px rgba(197, 164, 109, 0.15),
      0 4px 10px rgba(53, 94, 59, 0.1);
  }

  .timeline-item::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
      rgba(53, 94, 59, 0.02) 0%, 
      rgba(197, 164, 109, 0.02) 50%, 
      rgba(110, 44, 44, 0.02) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .timeline-item:hover::after {
    opacity: 1;
  }

  .timeline-icon {
    font-size: 1.5rem;
    min-width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    flex-shrink: 0;
    background: var(--retro-accent-green);
    color: white;
    border-radius: 50%;
    box-shadow: 0 2px 8px rgba(53, 94, 59, 0.2);
    transition: all 0.3s ease;
  }

  .timeline-item:hover .timeline-icon {
    background: var(--retro-accent-gold);
    transform: scale(1.1);
    box-shadow: 0 4px 12px rgba(197, 164, 109, 0.3);
  }

  .timeline-content {
    flex: 1;
  }

  .timeline-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.3rem;
    color: var(--retro-accent-green);
    font-family: 'Playfair Display', serif;
  }

  .timeline-institution {
    font-size: 0.9rem;
    color: var(--retro-text);
    font-weight: 600;
    margin-bottom: 0.2rem;
    font-family: 'Inter', sans-serif;
  }

  .timeline-period {
    color: var(--retro-accent-gold);
    margin-bottom: 0.5rem;
    font-size: 0.85rem;
    font-weight: 500;
    font-family: 'Inter', sans-serif;
  }

  .timeline-description {
    color: var(--retro-text-light);
    line-height: 1.5;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
    font-family: 'Inter', sans-serif;
  }





  .skills-section {
    padding: 3rem 0;
  }

  /* Premium Tech Stack Styling */
  .tech-category {
    margin-bottom: 3rem;
  }

  .category-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--retro-accent-green);
    margin-bottom: 1.5rem;
    font-family: 'Playfair Display', serif;
    text-align: center;
    position: relative;
  }

  .category-title::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, var(--retro-accent-gold), var(--retro-accent-green));
    border-radius: 1px;
  }

  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(110px, 1fr));
    gap: 1.25rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .tech-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.5rem 1rem;
    background: var(--retro-bg-alt);
    border: 1px solid var(--retro-border);
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .tech-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
      rgba(53, 94, 59, 0.05) 0%, 
      rgba(197, 164, 109, 0.05) 50%, 
      rgba(110, 44, 44, 0.05) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .tech-item:hover {
    transform: translateY(-4px) scale(1.02);
    border-color: var(--retro-accent-gold);
    box-shadow: 
      0 8px 25px rgba(197, 164, 109, 0.15),
      0 4px 10px rgba(53, 94, 59, 0.1);
  }

  .tech-item:hover::before {
    opacity: 1;
  }

  .tech-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.75rem;
    transition: all 0.3s ease;
    border-radius: 8px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
  }

  .tech-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 2px 4px rgba(53, 94, 59, 0.2));
    transition: all 0.3s ease;
    padding: 4px;
  }

  /* Special styling for specific image types */
  .tech-img[alt*="Linux"],
  .tech-img[alt*="Kali"] {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 6px;
  }

  .tech-img[alt*="Python"] {
    background: rgba(53, 94, 59, 0.05);
    border-radius: 6px;
  }

  .tech-img[alt*="Docker"] {
    background: rgba(0, 123, 255, 0.05);
    border-radius: 6px;
  }

  .tech-item:hover .tech-icon {
    transform: scale(1.1);
    background: rgba(197, 164, 109, 0.1);
  }

  .tech-item:hover .tech-img {
    filter: drop-shadow(0 4px 8px rgba(197, 164, 109, 0.3));
  }

  .tech-label {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--retro-text);
    text-align: center;
    font-family: 'Inter', sans-serif;
    letter-spacing: 0.025em;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .tech-grid {
      grid-template-columns: repeat(auto-fit, minmax(90px, 1fr));
      gap: 1rem;
      max-width: 100%;
    }
    
    .tech-item {
      padding: 1rem 0.75rem;
    }
    
    .tech-icon {
      width: 40px;
      height: 40px;
    }
    
    .tech-label {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .tech-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 0.75rem;
    }
    
    .tech-item {
      padding: 0.75rem 0.5rem;
    }
    
    .tech-icon {
      width: 36px;
      height: 36px;
    }
    
    .tech-label {
      font-size: 0.75rem;
    }
  }

  @media (max-width: 360px) {
    .tech-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 0.5rem;
    }
    
    .tech-item {
      padding: 0.5rem 0.25rem;
    }
  }

  .certificates-section {
    padding: 2rem 0;
  }

  .certificates-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .certificate-card {
    padding: 2rem;
    background: var(--retro-bg-alt);
    border: 1px solid var(--retro-border);
    border-radius: 16px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .certificate-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
      rgba(53, 94, 59, 0.02) 0%, 
      rgba(197, 164, 109, 0.02) 50%, 
      rgba(110, 44, 44, 0.02) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .certificate-card:hover {
    transform: translateY(-6px);
    border-color: var(--retro-accent-gold);
    box-shadow: 
      0 12px 30px rgba(197, 164, 109, 0.15),
      0 6px 15px rgba(53, 94, 59, 0.1);
  }

  .certificate-card:hover::before {
    opacity: 1;
  }

  .certificate-card.featured {
    background: var(--retro-bg-alt);
    border: 2px solid var(--retro-accent-green);
    position: relative;
  }

  .certificate-card.featured::after {
    content: '‚≠ê Featured';
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--retro-accent-gold);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    font-family: 'Inter', sans-serif;
  }



