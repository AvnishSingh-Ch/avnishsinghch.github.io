<style>
  .projects-hero {
    text-align: center;
    padding: 2rem 0;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: #6c757d;
    max-width: 600px;
    margin: 0 auto;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .project-card {
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(102, 126, 234, 0.1);
    border-radius: 20px;
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, #667eea, #764ba2, #4ecdc4);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .project-card:hover::before {
    transform: scaleX(1);
  }

  .project-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15);
    border-color: rgba(102, 126, 234, 0.3);
  }

  .project-card.featured {
    grid-column: 1 / -1;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
    border: 2px solid rgba(102, 126, 234, 0.2);
  }

  .project-header {
    margin-bottom: 1.5rem;
  }

  .project-badge {
    display: inline-block;
    background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.8rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .featured-badge {
    background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  }

  .project-title {
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #333;
  }

  .project-subtitle {
    color: #6c757d;
    font-size: 1rem;
    font-weight: 500;
  }

  .project-content {
    margin-bottom: 2rem;
  }

  .project-description {
    color: #495057;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .project-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem;
    background: rgba(102, 126, 234, 0.05);
    border-radius: 10px;
    font-size: 0.9rem;
    color: #495057;
  }

  .feature-icon {
    font-size: 1.2rem;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tech-tag {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .project-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .project-link {
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .project-link.primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .project-link.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
  }

  .project-link.secondary {
    background: transparent;
    color: #667eea;
    border-color: #667eea;
  }

  .project-link.secondary:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
  }

  .coming-soon {
    text-align: center;
    padding: 3rem 0;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .coming-soon-text {
    font-size: 1.1rem;
    color: #6c757d;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .upcoming-projects {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .upcoming-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    background: rgba(102, 126, 234, 0.1);
    border-radius: 15px;
    color: #495057;
    font-weight: 500;
  }

  .upcoming-icon {
    font-size: 1.5rem;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }
    
    .projects-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .project-card {
      padding: 1.5rem;
    }
    
    .project-features {
      grid-template-columns: 1fr;
    }
    
    .upcoming-projects {
      flex-direction: column;
      align-items: center;
    }
  }

  /* Dark theme adjustments */
  html[data-theme="dracula"] {
    .project-card {
      background: rgba(26, 26, 46, 0.95);
      border-color: rgba(102, 126, 234, 0.2);
    }
    
    .project-card.featured {
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    }
    
    .project-title {
      color: #ffffff;
    }
    
    .project-description {
      color: #e9ecef;
    }
    
    .feature-item {
      background: rgba(102, 126, 234, 0.1);
      color: #e9ecef;
    }
    
    .upcoming-item {
      background: rgba(102, 126, 234, 0.15);
      color: #e9ecef;
    }
  }
</style> 