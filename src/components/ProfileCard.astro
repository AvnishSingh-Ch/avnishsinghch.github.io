---
import { Image } from "astro:assets";
import Menu from "../components/ProfileCardMenu.astro";
import Footer from "../components/ProfileCardFooter.astro";
import { USER_AVATAR } from "../consts";
---

<div
  class="flex-col gap-3 mb-6 w-full sticky md:sticky lg:relative card bg-base-100 p-3"
>
  <div class="avatar p-2">
    <div class="profile-image-container">
      <Image
        class="mask mask-circle sepia-effect"
        format="webp"
        width={240}
        height={240}
        src={USER_AVATAR}
        alt="Profile"
        loading="eager"
      />
    </div>
  </div>
  <Menu />
  <Footer />
</div>

<style>
  .profile-image-container {
    position: relative;
    display: inline-block;
  }
  
  .sepia-effect {
    filter: sepia(0.3) contrast(1.1);
    border: 2px solid var(--retro-accent-gold);
    transition: all 0.3s ease;
  }
  
  .sepia-effect:hover {
    filter: sepia(0.1) contrast(1.2);
    border-color: var(--retro-accent-green);
  }
</style>
