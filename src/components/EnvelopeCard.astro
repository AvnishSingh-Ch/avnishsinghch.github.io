---
import { Image } from "astro:assets";
import type { EnvelopeInfo } from "../types";

const {
  title,
  desc,
  image,
  url,
} = Astro.props as EnvelopeInfo;
const target = "_self";
---

<div class="envelope-card">
  <div class="envelope-content">
    <div class="envelope-text">
      <a href={url} target={target}>
        <h1 id={title} class="envelope-title">
          {title}
        </h1>
      </a>
      <div class="envelope-description">{desc}</div>
    </div>
  </div>

  {
    image && (
      <a
        href={url}
        target={target}
        class="envelope-image-link"
      >
        <Image
          src={image}
          alt={title}
          width="300"
          height="200"
          format="webp"
          loading="eager"
          class="envelope-image"
        />
      </a>
    )
  }
</div>

<style>
  .envelope-card {
    background: var(--retro-bg);
    border: 1px solid var(--retro-border);
    border-radius: 12px;
    box-shadow: 0 2px 8px var(--retro-shadow);
    margin: 2rem 0;
    overflow: hidden;
    transition: all 0.2s ease;
    display: flex;
    flex-direction: column;
  }
  
  .envelope-card:hover {
    border-color: var(--retro-accent-green);
    box-shadow: 0 4px 12px var(--retro-shadow);
    transform: translateY(-2px);
  }
  
  .envelope-content {
    flex: 1;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .envelope-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--retro-primary);
    font-family: 'Playfair Display', serif;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }
  
  .envelope-description {
    color: var(--retro-text);
    font-family: 'Inter', sans-serif;
    line-height: 1.6;
    margin: 0;
  }
  
  .envelope-image-link {
    display: block;
    width: 100%;
    height: auto;
    overflow: hidden;
  }
  
  .envelope-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .envelope-image:hover {
    transform: scale(1.05);
  }
  
  @media (min-width: 1024px) {
    .envelope-card {
      flex-direction: row;
    }
    
    .envelope-content {
      order: 1;
      flex: 1;
    }
    
    .envelope-image-link {
      order: 2;
      width: 40%;
    }
  }
  
  @media (min-width: 768px) {
    .envelope-content {
      padding: 2rem;
    }
    
    .envelope-title {
      font-size: 2.5rem;
    }
  }
</style>
