---
import { menuItems } from "../consts";
---

<div class="mobile-nav-overlay" id="mobileNavOverlay">
  <div class="mobile-nav-content">
    <div class="mobile-nav-header">
      <h3>Navigation</h3>
      <button class="mobile-nav-close" id="mobileNavClose">Ã—</button>
    </div>
    <nav class="mobile-nav-menu">
      {menuItems.map((item) => (
        <a 
          href={item.href} 
          target={item.target}
          class="mobile-nav-item"
          data-nav-item
        >
          <span class="mobile-nav-text">{item.text}</span>
        </a>
      ))}
    </nav>
  </div>
</div>

<style>
  :root {
    --terminal-green: #00ff41;
    --terminal-green-dim: #00cc33;
    --terminal-green-bright: #66ff66;
    --terminal-amber: #ffb000;
    --terminal-red: #ff4444;
    --terminal-blue: #4488ff;
    --terminal-cyan: #44ffff;
    --terminal-bg: #0a0a0a;
    --terminal-bg-light: #1a1a1a;
    --terminal-bg-card: #111111;
    --terminal-border: #333333;
    --terminal-text: #e0e0e0;
    --terminal-text-dim: #999999;
    --terminal-shadow: rgba(0, 255, 65, 0.3);
  }

  .mobile-nav-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .mobile-nav-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .mobile-nav-content {
    position: absolute;
    top: 0;
    right: 0;
    width: 280px;
    height: 100%;
    background: var(--terminal-bg-card);
    border-left: 2px solid var(--terminal-border);
    transform: translateX(100%);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    font-family: 'Cascadia', 'Fira Code', 'JetBrains Mono', monospace;
  }

  .mobile-nav-overlay.active .mobile-nav-content {
    transform: translateX(0);
  }

  .mobile-nav-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    border-bottom: 2px solid var(--terminal-border);
    background: var(--terminal-bg-light);
  }

  .mobile-nav-header h3 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: bold;
    color: var(--terminal-green);
    text-shadow: 0 0 5px var(--terminal-shadow);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .mobile-nav-header h3::before {
    content: '> ';
    color: var(--terminal-amber);
  }

  .mobile-nav-close {
    background: none;
    border: 2px solid var(--terminal-border);
    font-size: 1.5rem;
    color: var(--terminal-text);
    cursor: pointer;
    padding: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    font-family: monospace;
  }

  .mobile-nav-close:hover {
    background: var(--terminal-red);
    color: var(--terminal-bg);
    border-color: var(--terminal-red);
    box-shadow: 0 0 10px rgba(255, 68, 68, 0.3);
  }

  .mobile-nav-menu {
    flex: 1;
    padding: 1rem 0;
    overflow-y: auto;
  }

  .mobile-nav-item {
    display: flex;
    align-items: center;
    padding: 1rem 1.5rem;
    color: var(--terminal-text);
    text-decoration: none;
    font-size: 1rem;
    font-weight: normal;
    min-height: 56px;
    border-bottom: 1px solid var(--terminal-border);
    transition: all 0.2s ease;
    position: relative;
    border-left: 3px solid transparent;
  }

  .mobile-nav-item::before {
    content: '> ';
    color: var(--terminal-green);
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .mobile-nav-item:hover::before,
  .mobile-nav-item:active::before {
    opacity: 1;
  }

  .mobile-nav-item:hover,
  .mobile-nav-item:active {
    background: rgba(0, 255, 65, 0.1);
    color: var(--terminal-green);
    border-left-color: var(--terminal-green);
    text-shadow: 0 0 5px var(--terminal-shadow);
  }

  .mobile-nav-text {
    flex: 1;
  }

  /* Dark theme support (same as default since we're using terminal theme) */
  html[data-theme="dracula"] .mobile-nav-content {
    background: var(--terminal-bg-card);
  }

  html[data-theme="dracula"] .mobile-nav-header {
    background: var(--terminal-bg-light);
    border-color: var(--terminal-border);
  }

  html[data-theme="dracula"] .mobile-nav-header h3 {
    color: var(--terminal-green);
  }

  html[data-theme="dracula"] .mobile-nav-close {
    color: var(--terminal-text);
    border-color: var(--terminal-border);
  }

  html[data-theme="dracula"] .mobile-nav-item {
    color: var(--terminal-text);
    border-color: var(--terminal-border);
  }

  html[data-theme="dracula"] .mobile-nav-item:hover,
  html[data-theme="dracula"] .mobile-nav-item:active {
    background: rgba(0, 255, 65, 0.1);
    color: var(--terminal-green);
  }
</style>

<script>
  function initMobileNav() {
    const overlay = document.getElementById('mobileNavOverlay');
    const closeBtn = document.getElementById('mobileNavClose');
    const navItems = document.querySelectorAll('[data-nav-item]');

    // Close navigation
    function closeNav() {
      overlay?.classList.remove('active');
      document.body.style.overflow = '';
    }

    // Function to open navigation
    function openNav() {
      overlay?.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    // Close on overlay click
    overlay?.addEventListener('click', (e) => {
      if (e.target === overlay) {
        closeNav();
      }
    });

    // Close on close button click
    closeBtn?.addEventListener('click', closeNav);

    // Close on navigation item click
    navItems.forEach(item => {
      item.addEventListener('click', closeNav);
    });

    // Close on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && overlay?.classList.contains('active')) {
        closeNav();
      }
    });
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initMobileNav);
  
  // Re-initialize on page transitions
  document.addEventListener('swup:page:view', initMobileNav);
</script>